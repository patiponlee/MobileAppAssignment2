<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width = "100dp"
        android:layout_height = "100dp"
        android:src = "@drawable/egco"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id = "@+id/circleImageView"/>

    <TextView
        android:text="List of Usernames"
        android:layout_width="match_parent"
        android:id="@+id/listofusernametxt"
        android:textColor="#FF51C3D4"
        android:gravity="center"
        android:layout_height="40dp"
        android:background="#FFD6D6D6"
        android:layout_below="@+id/circleImageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listofusername"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/listofusernametxt" />


</RelativeLayout>